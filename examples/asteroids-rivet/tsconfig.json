{
    "compilerOptions": {
        "target": "ES2018",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "lib": ["ES6", "DOM"],
        "outDir": "dist/",
        "strictNullChecks": true,
        "paths": {
            "@shared/*": ["./shared/*"],
            "@display/*": ["./client/display/*"]
        }
    },
    "include": ["server/**/*.ts", "client/**/*.ts", "shared/**/*.ts"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
